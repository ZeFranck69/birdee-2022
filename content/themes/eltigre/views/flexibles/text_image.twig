<section id="{{ section.title|sanitize }}" class="text-image {{ section.section_width == "ajust" ? "main-wrapper" : "" }} {{ section.section_width == "ajust" ? "classic" : "quote" }} {{ section.radius }}" style="background-color: {{ section.background_color }}; padding: {{ section.section_margin }}px">

	<div class="text-image-container" style="text-align: {{ section.text_align }};">
		<div class="{{ section.section_width == "fullwidth" ? "main-wrapper" : "" }}">
			<div class="text-image-wrapper text-image-wrapper--{{ section.layout }}" style="justify-content: {{ section.justify_content }};">
				<div class="text-image__image" style="max-width: {{ section.container_image_width }}px;">
					<img src="{{ section.image.url }}" alt="{{ section.image.alt }}" style=" max-width: {{ section.width }}px;">
				</div>
				<div class="text-part__container" style="max-width: {{ section.text_container_width }}px;">

					<div class="text-part {{ section.text_align }}" style=" max-width: {{ section.text_width }}px;">
						{% if section.surtitle %}
						<div class="text-part__surtitle surtitle">
							{{ section.surtitle }}
						</div>
						{% endif %}
						{% if section.title %}
						<div class="text-part__title title bold uppercase">
							{{ section.title }}
						</div>
						{% endif %}
						{% if section.description %}
						<div class="text-part__description description" style="color:{{ section.description_color }};">
							{{ section.description }}
						</div>
						{% endif %}
						{% if section.cta %}
						<div
							class="text-image__cta-wrapper {{ section.cta_align }}">
							<a href="{{ section.cta.url }}" class="cta cta--black-green" target="{{ section.cta.target }}">
								<span class="cta__label">
									{{ section.cta.title }}
								</span>
							</a>
						</div>
						{% endif %}
					</div>
				</div>
			</div>
		</div>
	</div>
</section>
