<section id="{{ section.title|sanitize }}" class="reasons" style="background-color: {{ section.background_color }}; ">
    <div class="reasons-container" style="text-align: {{ section.text_align }};">
        <div class="reasons-first-background" style="background-color: {{ section.first_background_color }};"></div>
        <div class="reasons-second-background" style="background-color: {{ section.second_background_color }};"></div>
		<div class="{{ section.section_width == "fullwidth" ? "" : "main-wrapper" }}" >
			<div class="reasons-wrapper {{ section.text_align }} padding-medium" style="background-color:{{ section.background_color }}">	
                {% if section.part_title %}
					<h2 class="text-part__title title bold uppercase" style="text-align: {{ section.text_align }};">
						{{ section.part_title }}
					</h2>
                {% endif %}
                {% if section.description %}
					<div class="text-part__description description" style="color:{{ section.part_description_color }}; text-align: {{ section.text_align }};">
						{{ section.part_description }}
					</div>
                {% endif %}
                <div class="reasons__content">
                    <div class="reasons-list {% if section.reasons| length <= 2 %}reasons-list--center{% endif %}">
                        {% for reason in section.reasons %}
                         <div class="reason">
                            <div class="reason__title--wrapper">
                                <img src="{{ reason.picto.url }}" alt="{{ reason.picto.alt }}" class="reason__logo">
                                <h3 class="reason__title title--secondary-unline uppercase bold" style="{{ reason.title_color }}">
                                    {{ reason.title }}
                                </h3>
                            </div>
                            <div class="reason__content description" style="color:{{ reason.color }}">
                                {{ reason.content }}
                            </div>
                         </div>       
                        {% endfor %}
                    </div>
                    {% if section.title and section.definition %}
                    <div class="reasons__text-image">
                        <div class="reasons__text-image--left-part">
                            <img src="{{ Image(section.logo).src }}" alt="{{ Image(section.logo).alt }}" class="reason-picto" style="max-width: {{ section.image_width }}px;">
                        </div>
                        <div class="reasons__text-image--right-part" style="max-width: {{ section.container_text_width }}px;">
                            <div class="reasons__text-image--right-part__title title--secondary-unline uppercase bold">
                                {{ section.title }}
                            </div>
                            <div class="reasons__text-image--right-part__definition description">
                                {{ section.definition }}
                            </div>
                        </div>
                    </div>
                    {% endif %}
                </div>
                {% if section.cta %}
					<div
						class="reasons__cta-wrapper {{ section.cta_align }}">
						<a href="{{ section.cta.url }}" class="cta cta--black-green uppercase bold" target="{{ section.cta.target }}">
							<span class="cta__label">
								{{ section.cta.title }}
							</span>
						</a>
					</div>
                {% endif %}
			</div>
		</div>
	</div>
</section>
