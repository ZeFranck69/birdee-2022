{% if landing_mode == false %}
<div class="footer__content" style="background-color: {{ options.footer_background_color }}">
    <div class="footer-wrapper main-wrapper">
			<div class="footer__logo-wrapper center">        
						<a href="{{ site.url }}">
							{{ logo }}
					</a>
			</div>
			<div class="footer__columns">
					<div class="footer__column">
							<h4 class="column__title accordeon">{{ __('Tout savoir sur Birdee','eltigre')}}</h4>
							<nav class="footer-column__nav">
									{% include "partial/menu.twig" with {'items': menu.footer.birdee.get_items} %}
							</nav>
					</div>        
							
							
					<div class="footer__column">
						<div class="help__menu">
							<h4 class="column__title accordeon">{{ __('Besoin d\'aide','eltigre')}}</h4>
							<nav class="footer-column__nav">
									{% include "partial/menu.twig" with {'items': menu.footer.help.get_items} %}
							</nav>
						</div>
						<div class="about--menu">
							<h4 class="column__title accordeon">{{ __('À propos','eltigre')}}</h4>
							<nav class="footer-column__nav">
									{% include "partial/menu.twig" with {'items': menu.footer.about.get_items} %}
							</nav>
						</div>
					</div>

					<div class="footer__column">
						<div class="socials-media--menu">
							<h4 class="column__title accordeon">{{ __('Réseaux sociaux','eltigre')}}</h4>
							<div class="footer__socials">
								{% for social in options.socials_media %}
									<div class="footer-socials__social">
											<a href="{{ social.link }}" target="_blank" rel="noopener noreferrer">
													{{ social.logo }}
											</a>
									</div>
								{% endfor %}
							</div>
						</div>
						<div class="applications--menu">
							<h4 class="column__title accordeon">{{ __('Telecharger notre application','eltigre')}}</h4>
							<div class="applications-wrapper">
								{% for application in options.applications %}
								<a href="{{ application.link }}" target="_blank">
									<img src="{{ Image(application.image).src }}" alt="{{ Image(application.image).alt }}">
								</a>
								{% endfor %}
							</div>
						</div>

					</div>  

			</div>
		<div class="footer__socials--mobile">
			{% for social in options.socials_media %}
				<div class="footer-socials__social">
						<a href="{{ social.link }}" target="_blank" rel="noopener noreferrer">
								{{ social.logo }}
						</a>
				</div>
			{% endfor %}
		</div>
		<div class="preventive-text center">
			{{ options.preventive_text }}
		</div>
	</div>
</div>
 <!-- intercom -->
 <div id="intercom_messenger" class="wow fadeIn">
	<div class="intercom-container">
		<img src="{{ options.logo_intercom.url }}" alt="logo intercom">
		<p>{{ __('Need some help ?', 'eltigre') }}</p>
	</div>
</div>
{% elseif landing_mode == true %}
<div class="footer__content footer-landing" style="background-color: {{ options.footer_background_color }}">
    <div class="footer-wrapper main-wrapper">
		<div class="footer__logo-wrapper center"> 
			<div class="main-footer-logo">
				<a href="{{ site.url }}">
					{{ logo }}
				</a>
			</div>  
			<div class="logo-partner--footer">
				<a href="{{ landing_link }}" target="_blank">
					<img src="{{ landing_logo.url }}" alt="{{ landing_logo.alt }}" class="footer-logo-partner-img">
				</a>
			</div>     
		</div>
	</div>
</div>

{% endif %}
